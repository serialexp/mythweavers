{
  "name": "writer",
  "private": true,
  "version": "1.0.0",
  "description": "Writer monorepo",
  "pnpm": {
    "overrides": {
      "@types/node": "catalog:",
      "happy-dom": ">=20.0.0",
      "form-data": ">=4.0.4",
      "esbuild": ">=0.25.0",
      "cookie": ">=0.7.0",
      "path-to-regexp": ">=8.0.0",
      "tmp": ">=0.2.4",
      "fastify": ">=5.3.2",
      "axios": ">=1.12.0",
      "lodash": ">=4.17.21",
      "node-forge": ">=1.3.2",
      "glob": ">=11.1.0",
      "vite": ">=6.3.6",
      "jws": ">=4.0.1",
      "@modelcontextprotocol/sdk": ">=1.24.0",
      "@trpc/server": ">=11.1.1",
      "playwright": ">=1.55.1",
      "mdast-util-to-hast": ">=13.2.1",
      "body-parser": ">=2.2.1",
      "brace-expansion": ">=2.0.2",
      "js-yaml": ">=4.1.1"
    }
  },
  "scripts": {
    "dev": "pnpm build:shared && pnpm -r --parallel dev",
    "dev:all": "pnpm build:shared && concurrently -n backend,reader,editor,histoire -c blue,green,magenta,yellow \"pnpm --filter @mythweavers/backend dev\" \"pnpm --filter @mythweavers/reading-frontend-astro dev\" \"pnpm --filter @mythweavers/story-editor dev\" \"pnpm --filter @mythweavers/ui story\"",
    "dev:reader": "pnpm build:shared && pnpm --filter @mythweavers/reading-frontend-astro dev",
    "dev:backend": "pnpm --filter @mythweavers/backend dev",
    "dev:editor": "pnpm build:shared && pnpm --filter @mythweavers/story-editor dev",
    "dev:legacy-server": "pnpm build:shared && pnpm --filter @writer/legacy-backend dev",
    "build": "pnpm -r build",
    "build:shared": "pnpm --filter @mythweavers/shared build",
    "test": "pnpm -r test",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "format": "biome format --write .",
    "check": "biome check --write --unsafe .",
    "db:migrate": "cd apps/mythweavers-backend && bun --env-file=../../.env.local prisma migrate dev",
    "db:studio": "cd apps/mythweavers-backend && bun --env-file=../../.env.local prisma studio",
    "docker:build": "depot bake -f docker-bake.hcl",
    "docker:build:backend": "depot bake -f docker-bake.hcl backend",
    "docker:build:editor": "depot bake -f docker-bake.hcl story-editor",
    "docker:build:reader": "depot bake -f docker-bake.hcl reader"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "concurrently": "^9.1.2",
    "typescript": "^5.8.3"
  }
}
